{
  "name": "Terra Devcontainer",
  "image": "ghcr.io/terrapkg/builder:f42",
  "runArgs": ["--privileged"],
  "features": {
    "ghcr.io/devcontainers/features/common-utils:2": {}
  },
  "customizations": {
    "vscode": {
      "extensions": ["rhaiscript.vscode-rhai"]
    }
  },
  "remoteUser": "vscode",
  "onCreateCommand": "sudo usermod -a -G mock vscode"
}
